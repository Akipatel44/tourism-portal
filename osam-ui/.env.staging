# Environment Variables for Staging
# Used when running: npm run build:staging

# ============================================================================
# API Configuration
# ============================================================================

# Staging API URL (update with actual staging backend)
VITE_API_BASE_URL=https://staging-api.osam-tourism.com/api/v1

# API request timeout
VITE_API_TIMEOUT=40000

# ============================================================================
# Image Configuration
# ============================================================================

# Staging image base URL
VITE_IMAGE_BASE_URL=https://staging-assets.osam-tourism.com

# Enable image optimization in staging
VITE_IMAGE_OPTIMIZATION=true

# ============================================================================
# Application Environment
# ============================================================================

VITE_APP_ENV=staging

VITE_APP_NAME=OSAM Tourism Platform (Staging)

VITE_APP_VERSION=1.0.0-staging

# ============================================================================
# Authentication Settings
# ============================================================================

VITE_AUTH_ENABLED=true

VITE_AUTH_REDIRECT_PATH=/

VITE_AUTH_LOGOUT_PATH=/login

VITE_AUTH_MOCK=false

# ============================================================================
# Feature Flags
# ============================================================================

# Enable all features in staging for testing
VITE_FEATURE_ADMIN=true

VITE_FEATURE_ANALYTICS=true

VITE_FEATURE_BETA=true

VITE_FEATURE_ERROR_DETAILS=true

VITE_FEATURE_API_LOGGING=true

# ============================================================================
# Development Settings
# ============================================================================

VITE_DEBUG=false

VITE_LOG_LEVEL=info

VITE_LOG_API_CALLS=false

VITE_REACT_DEVTOOLS=false

VITE_SOURCE_MAPS=false
