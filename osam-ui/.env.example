# Environment Variables Template
# Copy this file to create environment-specific files:
# - .env (default/development)
# - .env.development (dev environment)
# - .env.production (production environment)
# - .env.staging (staging environment - optional)

# ============================================================================
# API Configuration
# ============================================================================

# Base URL for API requests (include /api/v1 path)
# Development: http://localhost:8000/api/v1
# Production: https://api.osam-tourism.com/api/v1
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds
# Development: 30000ms (generous for debugging)
# Production: 45000ms (account for network latency)
VITE_API_TIMEOUT=30000

# ============================================================================
# Image Configuration
# ============================================================================

# Base URL for image assets (without trailing slash)
# Development: http://localhost:8000
# Production: https://assets.osam-tourism.com or https://api.osam-tourism.com
VITE_IMAGE_BASE_URL=http://localhost:8000

# Enable image optimization (WebP conversion, lazy loading, etc)
VITE_IMAGE_OPTIMIZATION=false

# ============================================================================
# Application Environment
# ============================================================================

# Environment identifier: development | staging | production
VITE_APP_ENV=development

# Application display name
VITE_APP_NAME=OSAM Tourism Platform

# Application version (semantic versioning)
VITE_APP_VERSION=1.0.0

# ============================================================================
# Authentication Settings
# ============================================================================

# Enforce authentication checks on app startup
VITE_AUTH_ENABLED=true

# Redirect destination after successful login (relative path)
VITE_AUTH_REDIRECT_PATH=/

# Redirect destination for logout (relative path)
VITE_AUTH_LOGOUT_PATH=/login

# Use mock authentication (bypass real login for testing)
# WARNING: Only use in development/testing environments
VITE_AUTH_MOCK=false

# ============================================================================
# Feature Flags
# ============================================================================

# Admin Dashboard - Management UI for places, events, galleries
VITE_FEATURE_ADMIN=true

# Analytics - Usage tracking and analytics (GA4, Mixpanel, etc)
VITE_FEATURE_ANALYTICS=false

# Beta Features - Experimental features for early adopters
VITE_FEATURE_BETA=false

# Error Details - Show detailed error messages and stack traces to users
VITE_FEATURE_ERROR_DETAILS=false

# API Logging - Log all API calls to browser console
VITE_FEATURE_API_LOGGING=true

# ============================================================================
# Development & Debugging Settings
# ============================================================================

# Enable verbose console output
VITE_DEBUG=false

# Minimum log level to output
# Levels: 'trace' | 'debug' | 'info' | 'warn' | 'error'
VITE_LOG_LEVEL=info

# Log detailed API calls and responses
VITE_LOG_API_CALLS=false

# Enable React DevTools extension integration
VITE_REACT_DEVTOOLS=false

# Enable source maps for debugging (larger bundle size)
VITE_SOURCE_MAPS=false
