# Environment Variables for Development
# Used when running: npm run dev

# ============================================================================
# API Configuration
# ============================================================================

# Base URL for API requests (FastAPI backend running on localhost)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds (generous for local debugging)
VITE_API_TIMEOUT=30000

# ============================================================================
# Image Configuration
# ============================================================================

# Base URL for image assets (local development server)
VITE_IMAGE_BASE_URL=http://localhost:8000

# Enable image optimization in development
VITE_IMAGE_OPTIMIZATION=false

# ============================================================================
# Application Environment
# ============================================================================

# Application mode: development | staging | production
VITE_APP_ENV=development

# Application name
VITE_APP_NAME=OSAM Tourism Platform

# Application version
VITE_APP_VERSION=1.0.0-dev

# ============================================================================
# Authentication Settings
# ============================================================================

# Enable authentication enforcement
VITE_AUTH_ENABLED=true

# Redirect path after successful login
VITE_AUTH_REDIRECT_PATH=/

# Redirect path after logout
VITE_AUTH_LOGOUT_PATH=/login

# Mock authentication for development (bypass login)
VITE_AUTH_MOCK=false

# ============================================================================
# Feature Flags
# ============================================================================

# Enable admin dashboard and management features
VITE_FEATURE_ADMIN=true

# Enable analytics tracking and reporting
VITE_FEATURE_ANALYTICS=false

# Enable beta features for early testing
VITE_FEATURE_BETA=true

# Enable detailed error reporting
VITE_FEATURE_ERROR_DETAILS=true

# Enable API request logging
VITE_FEATURE_API_LOGGING=true

# ============================================================================
# Development Settings
# ============================================================================

# Enable verbose console logging
VITE_DEBUG=true

# Log level: 'trace' | 'debug' | 'info' | 'warn' | 'error'
VITE_LOG_LEVEL=debug

# Log API calls and responses
VITE_LOG_API_CALLS=true

# Enable React DevTools integration
VITE_REACT_DEVTOOLS=true

# Source maps for debugging
VITE_SOURCE_MAPS=true
